{
  "widget": {
    "name": "Salesbot Webhook Widget",
    "description": "A widget to execute webhooks from Salesbot with parameters",
    "short_description": "Executes webhooks with parameters",
    "version": "1.0.0",
    "interface_version": 2,
    "init_once": true,
    "locale": ["en", "es"],
    "installation": true,
    "support": {
      "link": "https://www.kommo.com",
      "email": "support@kommo.com"
    }
  },
  "locations": [
    "lcard-1"
  ],
  "salesbot_designer": {
    "handler_code": {
      "name": "salesbot.handler_name",
      "settings": {
        "button_title": {
          "name": "salesbot.button_title",
          "type": "text",
          "default_value": "Send to Webhook",
          "manual": true
        },
        "button_caption": {
          "name": "salesbot.button_caption",
          "type": "text",
          "default_value": "Click to send data",
          "manual": true
        },
        "webhook_url": {
          "name": "salesbot.webhook_url",
          "type": "text",
          "required": true
        },
        "custom_field1": {
          "name": "salesbot.custom_field1",
          "type": "text",
          "required": false
        },
        "custom_field2": {
          "name": "salesbot.custom_field2",
          "type": "text",
          "required": false
        }
      }
    }
  },
  "advanced": {
    "title": "advanced.title"
  }
}
